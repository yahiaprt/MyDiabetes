<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_element"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/height_element"
            android:layout_height="@dimen/height_element"
            android:padding="@dimen/padding_large"
            android:tint="?iconColorPrimary"
            android:contentDescription="@null"
            android:src="@drawable/ic_alarm"/>

        <TextView
            android:id="@+id/alarm_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/alarm_reminder_in"/>

        <ImageView
            android:id="@+id/alarm_delete"
            android:layout_width="@dimen/height_element"
            android:layout_height="@dimen/height_element"
            android:padding="@dimen/padding_large"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?iconColorPrimary"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/alarm_delete"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>