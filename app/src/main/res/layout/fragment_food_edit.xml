<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/separator"
                android:background="?attr/backgroundColorSecondary">

                <LinearLayout style="@style/LayoutRow"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        style="@style/LayoutRowImageMultiline"
                        android:tint="?iconColorPrimary"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_edit"/>

                    <com.mydiabetesprt.diabetes.partage.view.texteditor.StickHintInput
                        android:id="@+id/makla_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="textMultiLine|textCapSentences"/>

                </LinearLayout>

                <LinearLayout style="@style/LayoutRow"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        style="@style/LayoutRowImageMultiline"
                        android:tint="?iconColorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_business"/>

                    <com.mydiabetesprt.diabetes.partage.view.texteditor.StickHintInput
                        android:id="@+id/makla_edit_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/brand"
                        android:inputType="textMultiLine|textCapSentences"/>

                </LinearLayout>

                <LinearLayout style="@style/LayoutRow"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        style="@style/LayoutRowImageMultiline"
                        android:tint="?iconColorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_note"/>

                    <com.mydiabetesprt.diabetes.partage.view.texteditor.StickHintInput
                        android:id="@+id/makla_edit_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ingredients"
                        android:inputType="textMultiLine|textCapSentences"/>

                </LinearLayout>

                <TextView
                    style="@style/Padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/backgroundColorTertiary"
                    android:text="@string/nutriments_per_100g"/>

                <com.mydiabetesprt.diabetes.future.makla.editor.nutritionInputLayout
                    android:id="@+id/makla_edit_nutrition_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:divider="@drawable/separator"
                    android:background="?attr/backgroundColorPrimary"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <com.github.clans.fab.FloatingActionButton
        style="@style/FloatingActionButton"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_done"
        app:fab_colorNormal="?backgroundColorGreen"
        app:layout_dodgeInsetEdges="bottom"/>

</FrameLayout>