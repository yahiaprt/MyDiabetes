<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PaddingLarge"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_element_large"
    android:gravity="center_vertical"
    android:divider="@drawable/divider_large"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_medium"
            tools:text="Tag"/>

        <TextView
            android:id="@+id/tag_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/text_small"
            tools:text="10 entries"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/tag_button_delete"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_remove"
        android:tint="?iconColorSecondary"
        android:contentDescription="@string/delete"/>

</LinearLayout>