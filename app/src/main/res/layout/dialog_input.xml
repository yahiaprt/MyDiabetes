<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_element"
        android:paddingLeft="@dimen/margin_between_larger"
        android:paddingStart="@dimen/margin_between_larger"
        android:paddingRight="@dimen/margin_between_larger"
        android:paddingEnd="@dimen/margin_between_larger"
        android:background="@android:color/transparent"
        android:inputType="text"
        android:hint="@string/tag"
        android:importantForAutofill="no"/>

</FrameLayout>