<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_end"
        android:paddingBottom="@dimen/padding_end"
        android:paddingLeft="@dimen/padding_end_large"
        android:paddingStart="@dimen/padding_end_large"
        android:paddingRight="@dimen/padding_end_large"
        android:paddingEnd="@dimen/padding_end_large">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_dev"
            style="@style/LicenseLabel"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_dev_desc"
            style="@style/LicenseDescription"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_financing"
            style="@style/LicenseLabel"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_financing_desc"
            style="@style/LicenseDescription"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_health"
            style="@style/LicenseLabel"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_health_desc"
            style="@style/LicenseDescription"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_privacy"
            style="@style/LicenseLabel"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_privacy_desc"
            style="@style/LicenseDescription"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_code"
            style="@style/LicenseLabel"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="@string/about_code_desc"
            style="@style/LicenseDescription"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_code_url"
            android:autoLink="web"
            android:linksClickable="true"
            style="@style/LicenseDescription"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about_legal"
            style="@style/LicenseLabel"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="@string/about_legal_desc"
            style="@style/LicenseDescription"/>

    </LinearLayout>

</ScrollView>